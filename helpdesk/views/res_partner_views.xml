<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="res_partner_cliente_form" model="ir.ui.view">
        <field name="name">FormulÃ¡rio de Cliente</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form edit="true" delete="true">
                <header>
                    <button name="%(helpdesk.criar_usuario_wizard)d"  string="Criar UsuÃ¡rio"
                            type="action" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="is_company" invisible="1"/>
                            <field name="active" invisible="1"/>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="mobile"/>
                        </group>
                        <group>
                            <field name="email"/>
                            <field name="website"/>
                            <field name="usuarios"/>
<!--                            <field name="usuario_ids"   widget="many2many_tags"-->
<!--                                   options="{'no_open':True, 'no_create':1, 'no_create_edit':True}"/> &lt;!&ndash; widget="many2many_tags"  &ndash;&gt;-->
                        </group>
                    </group>

                    <notebook>
                        <page string="Itens">
                            <!-- you can display child data like code below -->
                            <field name="item_ids">
                                <tree edit="true">
                                    <field name="name"/>
                                    <field name="categoria_id"/>
<!--                                    <field name="responsavel_id"/>-->
                                    <field name="local"/>
                                    <field name="cliente_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="res_partner_cliente_tree" model="ir.ui.view">
        <field name="name">Lista de Clientes</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree create="true">
                <field name="name"/>
                <field name="id"/>
                <field name="phone"/>
                <field name="mobile"/>
                <field name="usuarios"/>
            </tree>
        </field>
    </record>

    <!-- Act Window -->
    <record id='res_partner_cliente_action' model='ir.actions.act_window'>
        <field name="name">Clientes</field>
        <field name="res_model">res.partner</field>
        <field name="context">{'default_is_company': 'True'}</field>
        <field name="domain">[('is_company','=','True')]</field>
    </record>

    <!-- Act Window View -->
    <record id="link_res_partner_cliente_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="10"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="res_partner_cliente_tree"/>
        <field name="act_window_id" ref="res_partner_cliente_action"/>
    </record>

    <record id="link_res_partner_cliente_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="20"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="res_partner_cliente_form"/>
        <field name="act_window_id" ref="res_partner_cliente_action"/>
    </record>

</odoo>

