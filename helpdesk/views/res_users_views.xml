<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="res_users_form" model="ir.ui.view">
        <field name="name">Formulário de usuário</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <form edit="true" delete="true">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="login"/>
                        </group>
<!--                        <group>-->
<!--                            <field name="email"/>-->
<!--                            <field name="website"/>-->
<!--                            <field name="usuario_ids"/>  &lt;!&ndash; widget="many2many_tags"/>  &ndash;&gt;-->
<!--                        </group>-->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="res_users_tree" model="ir.ui.view">
        <field name="name">Lista de Usuários</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="name"/>
                <field name="login"/>
                <field name="cliente_id"/>
                <field name="nome_cliente"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="res_users_atendente_form" model="ir.ui.view">
        <field name="name">Formulário de atendente</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <form edit="true" delete="true">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="login"/>
                            <field name="is_atendente" invisible="1"/>
                            <field name="categoria_ids"   widget="many2many_tags"
                                   options="{'no_open':False, 'no_create':1, 'no_create_edit':True}"/>
                        </group>
<!--                        <group>-->
<!--                            <field name="email"/>-->
<!--                            <field name="website"/>-->
<!--                            <field name="usuario_ids"/>  &lt;!&ndash; widget="many2many_tags"/>  &ndash;&gt;-->
<!--                        </group>-->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="res_users_atendente_tree" model="ir.ui.view">
        <field name="name">Lista de Atendentes</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <tree create="true">
                <field name="name"/>
                <field name="login"/>
                <field name="categorias"/>
            </tree>
        </field>
    </record>

    <!-- Act Window -->
    <record id='res_users_action' model='ir.actions.act_window'>
        <field name="name">Usuários</field>
        <field name="res_model">res.users</field>
        <field name="domain">[('cliente_id','>',0)]</field>
    </record>

    <record id='res_users_atendente_action' model='ir.actions.act_window'>
        <field name="name">Atendentes</field>
        <field name="res_model">res.users</field>
        <field name="context">{'default_is_atendente': 'True'}</field>
        <field name="domain">[('is_atendente','=',True)]</field>
    </record>

    <!-- Act Window View -->
    <record id="link_res_users_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="10"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="res_users_tree"/>
        <field name="act_window_id" ref="res_users_action"/>
    </record>

    <record id="link_res_users_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="20"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="res_users_form"/>
        <field name="act_window_id" ref="res_users_action"/>
    </record>

    <record id="link_res_users_tree_atendente" model="ir.actions.act_window.view">
        <field name="sequence" eval="10"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="res_users_atendente_tree"/>
        <field name="act_window_id" ref="res_users_atendente_action"/>
    </record>

    <record id="link_res_users_form_atendente" model="ir.actions.act_window.view">
        <field name="sequence" eval="20"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="res_users_atendente_form"/>
        <field name="act_window_id" ref="res_users_atendente_action"/>
    </record>
</odoo>

