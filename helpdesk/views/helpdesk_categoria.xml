<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="helpdesk_categoria_view_form" model="ir.ui.view">
        <field name="name">Formul√°rio de categoria</field>
        <field name="model">helpdesk.categoria</field>
        <field name="arch" type="xml">
            <form edit="true" delete="true">
                <sheet> 
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="helpdesk_categoria_view_tree" model="ir.ui.view">
        <field name="name">Lista de Categorias</field>
        <field name="model">helpdesk.categoria</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Act Window -->
    <record id='helpdesk_categoria_action' model='ir.actions.act_window'>
        <field name="name">Categorias</field>
        <field name="res_model">helpdesk.categoria</field>
    </record>

    <!-- Act Window View -->
    <record id="link_helpdesk_categoria_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="10"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="helpdesk_categoria_view_tree"/>
        <field name="act_window_id" ref="helpdesk_categoria_action"/>
    </record>

    <record id="link_helpdesk_categoria_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="20"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="helpdesk_categoria_view_form"/>
        <field name="act_window_id" ref="helpdesk_categoria_action"/>
    </record>

</odoo>

