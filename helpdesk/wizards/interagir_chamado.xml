<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View para Editar comentario -->
    <record id="helpdesk_interagir_chamado_form" model="ir.ui.view">
        <field name="name">interagir.chamado.wizard</field>
        <field name="model">temp.interagir.chamado</field>
        <field name="arch" type="xml">
            <form string="Interagir Chamado">
                <sheet>
                    <group name="group_top">
                        <group>
                            <field name="texto" string="Detalhamento" style="width: 600px"/>
                            <field name="status" invisible="0"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="interagir_chamado" string="Interagir" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="helpdesk_interagir_chamado_cliente_form" model="ir.ui.view">
        <field name="name">interagir.chamado.cliente.wizard</field>
        <field name="model">temp.interagir.chamado.cliente</field>
        <field name="arch" type="xml">
            <form string="Interagir Chamado Cliente">
                <sheet>
                    <group name="group_top">
                        <group>
                            <field name="interlocutor" invisible="0"/>
                            <field name="texto" string="Detalhamento" style="width: 600px"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="interagir_chamado_cliente" string="Interagir" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="helpdesk_interagir_chamado_usu_cliente_form" model="ir.ui.view">
        <field name="name">interagir.chamado.usu.cliente.wizard</field>
        <field name="model">temp.interagir.chamado.usu.cliente</field>
        <field name="arch" type="xml">
            <form string="Interagir Chamado Usuário Cliente">
                <sheet>
                    <group name="group_top">
                        <group>
                            <field name="texto" string="Detalhamento" style="width: 600px"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="interagir_chamado_usu_cliente" string="Interagir" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="helpdesk_designar_chamado_form" model="ir.ui.view">
        <field name="name">designar.chamado.wizard</field>
        <field name="model">temp.interagir.chamado</field>
        <field name="arch" type="xml">
            <form string="Interagir Chamado Cliente">
                <sheet>
                    <group name="group_top">
                        <group>
                            <field name="atendente_id" string="Atendende Designado"
                                   options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="designar_chamado" string="Designar" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="interagir_chamado_wizard" model="ir.actions.act_window">
        <field name="name">Interação de Chamados</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">temp.interagir.chamado</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="helpdesk_interagir_chamado_form" />
        <field name="target">new</field>
    </record>

    <record id="interagir_chamado_cliente_wizard" model="ir.actions.act_window">
        <field name="name">Interação de Chamados (Cliente)</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">temp.interagir.chamado.cliente</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="helpdesk_interagir_chamado_cliente_form" />
        <field name="target">new</field>
    </record>

    <record id="interagir_chamado_usu_cliente_wizard" model="ir.actions.act_window">
        <field name="name">Interação de Chamados (Usuário Cliente)</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">temp.interagir.chamado.usu.cliente</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="helpdesk_interagir_chamado_usu_cliente_form" />
        <field name="target">new</field>
    </record>

    <record id="designar_chamado_wizard" model="ir.actions.act_window">
        <field name="name">Designar Chamado</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">temp.interagir.chamado</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="helpdesk_designar_chamado_form" />
        <field name="target">new</field>
    </record>

</odoo>