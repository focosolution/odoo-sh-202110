<!-- O record abaixo é do tipo server. Serve para criar uma chamada a uma função Python -->
    <record id="helpdesk_criar_chamado_cliente_wizard_server" model="ir.actions.server">
        <field name="name">Abertura de Chamados - Cliente</field>
        <field name="model_id" ref="helpdesk.model_temp_tratar_chamado"/>
        <field name="state">code</field>
        <field name="code">action = model.criar_chamdo_cliente()</field>
